#!/bin/bash

yad --title "Icons" --escape-ok \
--button="gtk-ok:0" --form --center --width=240 --height=420 --borders=6 \
--text="\n Icon Installers \n" --text-align=center \
--window-icon=applications-graphics \
    --form \
    --field="         Install Buuf Icons!/usr/share/icons/gnome/22x22/categories/applications-graphics.png":FBTN "x-terminal-emulator -T 'Buuf Icons Installer' -e bash -c "buuf-icon-installer"" \
    --field="     Install Breeze Icons!/usr/share/icons/gnome/22x22/categories/applications-graphics.png":FBTN "x-terminal-emulator -T 'Breeze Icons Installer' -e bash -c "breeze-installer"" \
    --field="     Install Faenza Icons!/usr/share/icons/gnome/22x22/categories/applications-graphics.png":FBTN "x-terminal-emulator -T 'Faenza Icons Installer' -e bash -c "faenza-installer"" \
    --field="    Install Gnome Icons!/usr/share/icons/gnome/22x22/categories/applications-graphics.png":FBTN "x-terminal-emulator -T 'Gnome Icons Installer' -e bash -c "gnome-colors-installer"" \
    --field="     Install Numix Icons!/usr/share/icons/gnome/22x22/categories/applications-graphics.png":FBTN "x-terminal-emulator -T 'Numix Icons Installer' -e bash -c "numix-installer"" \
    --field="       Install Paper Icons!/usr/share/icons/gnome/22x22/categories/applications-graphics.png":FBTN "x-terminal-emulator -T 'Paper Icons Installer' -e bash -c "paper-installer"" \
    --field="  Install Obsidian Icons!/usr/share/icons/gnome/22x22/categories/applications-graphics.png":FBTN "x-terminal-emulator -T 'Obsidian Icons Installer' -e bash -c "obsidian-installer"" \
    --field="    Install Papirus Icons!/usr/share/icons/gnome/22x22/categories/applications-graphics.png":FBTN "x-terminal-emulator -T 'Papirus Icons Installer' -e bash -c "papirus-installer"" \
